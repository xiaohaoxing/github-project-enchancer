{
    "manifest_version": 3,
    "name": "GitHub Project Filter Enhancer",
    "description": "在 GitHub Projects 页面添加一键模糊搜索与常用筛选收藏。",
    "version": "3.0.0",
    "action": {
        "default_title": "GitHub Project Filter Enhancer"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://github.com/orgs/*/projects/*",
                "https://github.com/*/*/projects/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}

